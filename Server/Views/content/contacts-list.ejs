<h1 id="h1contactlist"><strong><%= title %></strong></h1>

<div class="row">
      <div class="col">
            <!-- Add Button -->
            <% if(displayName) { %>
                  <a href="/contacts-list/add" id="addButton" class="btn btn-primary mb-2"><i class="fas fa-plus-circle"></i> Add Contact Item</a>
            <% } %>
            <table class="table table-dark table-striped table-hover" id="contacttable">
                  <thead class="table-dark">
                        <tr>
                              <th scope="col">#</th>
                              <th scope="col">FullName</th>
                              <th scope="col">EmailAddress</th>
                              <th scope="col">ContactNumber</th>
                              <% if(displayName) { %>
                              <th></th>
                              <th></th>
                              <% } %>
                        </tr>
                  </thead>
                  <tbody>    
                        <% for (let count = 0; count < contactlist.length; count++) { %>
                              <!-- Repeatable Row Template -->
                              <tr>
                                    <th scope="row"><%= count + 1 %></th>
                                    <td><%= contactlist[count].FullName %></td>
                                    <td><%= contactlist[count].EmailAddress %></td>
                                    <td><%= contactlist[count].ContactNumber %></td>
                                    <!-- Buttons -->
                                    <% if(displayName) { %>
                                    <td class="text-center"><a href="/contacts-list/update/<%= contactlist[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Edit</a></td>
                                    <td class="text-center"><a href="/contacts-list/delete/<%= contactlist[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                                    <% } %>
                              </tr>
                        <% } %>
                  </tbody>
            </table>
      </div>
</div>