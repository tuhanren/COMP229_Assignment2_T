<div class="rrow text-white">
      <div class="offset-md-3 col-md-6 col-sm-12">
            <div class="register bg-dark my-3 p-5" id="contentArea">
                  <h1><strong><%= title %></strong></h1>
                  <hr style="height:2px; width:100%; border-width:0; color:white;">

                  <% if(messages.length > 0) { %>
                        <div id="messageArea" class="alert alert-danger">
                          <%= messages %>
                        </div>
                  <% } %>
                                    
                  <form id="registerForm" method="POST" novalidate>
                        <p class="hint-text">Create your own account. It's free and only takes a minute.</p>
                        <div class="form-group">
                              <div class="rrow">
                                    <p class="lead"><i class="fas fa-user-shield me-1"></i> Personal Information</p>
                                    <div class="col-md-12 mb-1">
                                          <input class="form-control" type="text" name="firstName" id="firstName"
                                                placeholder="First Name" required>
                                    </div>
                                    <div class="col-md-12 mb-1">
                                          <input class="form-control" type="text" name="lastName" id="lastName"
                                                placeholder="Last Name" required>
                                    </div>
                              </div>
                        </div>
                        <div class="form-group">
                              <div class="rrow">
                                    <div class="col-md-12">
                                          <input type="email" class="form-control" id="emailAddress" name="emailAddress"
                                                required value="" placeholder="Email">
                                    </div>
                              </div>
                        </div>
                        <div class="form-group mt-4">
                              <div class="rrow">
                                    <p class="lead"><i class="fas fa-user-shield me-1"></i> System Identification</p>
                                    <div class="col-md-12 mb-1">
                                          <input type="text" class="form-control" id="username" name="username" required
                                                value="" placeholder="Username">
                                    </div>
                              </div>

                              <div class="form-group">
                                    <div class="rrow">
                                          <div class="col-md-12 mb-1">
                                                <input type="password" class="form-control" id="password"
                                                      name="password" required value="" placeholder="Password">
                                          </div>
                                    </div>

                              </div>

                              <div class="form-group mb-3">
                                    <div class="rrow">
                                          <div class="col-md-12 mb-1">
                                                <input type="password" class="form-control" id="confirmPassword"
                                                      name="confirmPassword" required value=""
                                                      placeholder="Confirm Password">
                                          </div>
                                    </div>
                              </div>
                              <div class="text-right">
                                    <button id="submitButton" type="submit" class="btn btn-primary"><i
                                                class="fas fa-user-plus"></i> Register</button>
                                    <a href="/" id="cancelButton" class="btn btn-warning"><i
                                                class="fas fa-undo-alt"></i> Cancel</a>
                              </div>
                  </form>
            </div>
      </div>
      <p class="text-center text-muted small">
            Already have an account?
            <a href="/login">Sign in</a>
      </p>
</div>